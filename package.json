{
  "name": "@way4one/awesome-numbers",
  "version": "0.0.2",
  "description": "Library for awesome numbers operations",
  "main": "dist/awesome-numbers.cjs.js",
  "module": "dist/awesome-numbers.es.js",
  "type": "module",
  "scripts": {
    "build": "rollup --config",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js ./",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nicolas-camacho/awesome-numbers.git"
  },
  "keywords": [
    "awesome",
    "numbers",
    "test"
  ],
  "author": "nicolas-camacho",
  "license": "ISC",
  "devDependencies": {
    "jest": "^29.7.0",
    "release-it": "^17.6.0",
    "rollup": "^4.18.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "$schema": "https://unpkg.com/release-it/schema/release-it.json",
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    },
    "git": {
      "requireBranch": "release",
      "commitMessage": "chore(release): ${version}"
    },
    "hooks": {
      "before:init": [
        "git pull",
        "npm run test"
      ],
      "after:bump": [
        "npx auto-changelog -p"
      ]
    }
  }
}
